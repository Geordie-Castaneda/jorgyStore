{% extends 'base.html.twig' %}

{% block title %}Welcome{% endblock %}

{% block body %}
    <div class="page-content-product">
        <div class="main-product">
            <div class="container">
                <div class="row clearfix">
                    <div class="find-box">
                        <h1>Los mejores muebles de toda Boca del Monte</h1>
                        <h4>Solo en JorgyStore.com</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="products">
        <div class="main-products">
            <h2>Muebles disponibles</h2>
            <div class="product-slidr">
                <div class="slider">
                    {% for product in products %}
                        <div>
                            <div class="prod-box">
                                <div class="prod-i">
                                    <img src="{{ product.url }}" alt="#" />
                                </div>
                                <div class="prod-dit clearfix">
                                    <div class="dit-t clearfix">
                                        <div class="left-ti">
                                            <h4>{{ product.name }}</h4>
                                        </div>
                                        <a href="{{ path('app_product_show', {'id': product.id}) }}">Q{{ product.price }}</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                    {% for product in products %}
                        <div>
                            <div class="prod-box">
                                <div class="prod-i">
                                    <img src="{{ product.url }}" alt="#" />
                                </div>
                                <div class="prod-dit clearfix">
                                    <div class="dit-t clearfix">
                                        <div class="left-ti">
                                            <h4>{{ product.name }}</h4>
                                        </div>
                                        <a href="{{ path('app_product_show', {'id': product.id}) }}">Q{{ product.price }}</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}